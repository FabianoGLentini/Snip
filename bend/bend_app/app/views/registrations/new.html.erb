<h1>Sign Up</h1>

<% if @user.errors.any? %>
    <div>
        <% @user.errors.full_messages.each do |messages| %>
        <div><%= messages %></div>
        <% end %>
    </div>
<% end %>

<%= form_with model: @user, url: sign_up_path, data: { turbo: false } do |form| %>
<div>
    <%= form.label :username %>
    <%= form.text_field :username, placeholder: "username123" %>
</div>
<div>
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: "myemail@example.com" %>
</div>
<div>
    <%= form.label :password %>
    <%= form.password_field :password %>
</div>
<div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
</div>

<di>
    <%= form.submit "Sign Up" %>
</div>
<% end %>